<assembly>
  <id>dist</id>
  <formats>
    <format>tar.gz</format>
    <!--format>tar.bz2</format-->
    <format>zip</format>
    <format>dir</format>
  </formats>
  <fileSets>
    <fileSet>
      <outputDirectory></outputDirectory>
      <includes>
        <include>README</include>
        <include>ChangeLog</include>
        <include>gpl.txt</include>
        <include>INSTALL</include>
        <include>SITE</include>
        <include>TODO</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>target/scripts</directory>
      <outputDirectory>bin</outputDirectory>
      <fileMode>0755</fileMode>
    </fileSet>
  </fileSets>
  <files>
    <file>
      <source>${basedir}/target/xsm-demo-config.zip</source>
      <outputDirectory></outputDirectory>
    </file>
    <file>
      <source>${basedir}/target/dependency/xsm-web-${pom.version}.war</source>
      <outputDirectory></outputDirectory>
      <destName>xsm.war</destName>
    </file>
    <file>
      <source>${basedir}/target/dependency/xsm-bin-${pom.version}.jar</source>
      <outputDirectory>bin/</outputDirectory>
      <destName>xsm-bin.jar</destName>
    </file>
  </files>
  <dependencySets>
    <dependencySet>
      <outputDirectory>bin/</outputDirectory>
      <includes>
        <include>org.mortbay.jetty:jetty</include>
        <include>org.mortbay.jetty:jetty-util</include>
        <include>org.mortbay.jetty:servlet-api-2.5</include>
      </includes>
    </dependencySet>
  </dependencySets>
</assembly>
